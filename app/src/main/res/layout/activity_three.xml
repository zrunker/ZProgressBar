<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zprogressbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    android:gravity="center"
    android:orientation="vertical">


    <cc.ibooker.progressbarlib.HorizontalProgressWithProgress
        android:id="@+id/horizontal_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:progress="0"
        zprogressbar:progress_reach_color="@color/colorTitle"
        zprogressbar:progress_text_color="@color/colorTitle"
        zprogressbar:progress_unreach_color="#66FE7517" />

    <cc.ibooker.progressbarlib.HorizontalProgressWithProgress2
        android:id="@+id/horizontal_progress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="7"
        android:padding="10dp"
        android:progress="5" />

</LinearLayout>